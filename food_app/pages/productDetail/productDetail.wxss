/* pages/productDetail/productDetail.wxss */
page {
  background-color: #f1f1f1;
  padding-bottom: 112rpx;
}
view image {
  width: 100%;
  height: 390rpx;
}

page>view {
 margin: 20rpx 0;
 background-color:#fff;
 font-size: 26rpx;
 padding: 20rpx;
 color: #999;
}
.title {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 60rpx;
  color: black;
}
.img {
  width: 100%;
}

.desc {
  color: #333;
  line-height: 60rpx;
  text-indent: 2em;
}

/* 底部购物车区域 */

.btm_cart {
  border-top: 2rpx solid  #eeeeee;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 110rpx;
  display: flex;
}
.btm_cart  image {
  width: 64rpx;
  height: 64rpx;
}
.btm_cart view:nth-child(1) {
  margin-left: 330rpx;
}
.btm_cart>view {
  margin-top: 18rpx;
}
.btm_cart view:nth-child(2) {
  width: 160rpx;
  height: 72rpx;
  background-color: red;
  border-radius: 10rpx 0 0 10rpx;
  color: white;
  text-align: center;
  line-height: 72rpx;
  margin-left: 16rpx;
}
.btm_cart view:nth-child(3) {
  width: 160rpx;
  height: 72rpx;
  background-color: #fec0cb;
  border-radius:  0 10rpx 10rpx 0;
  color: white;
  text-align: center;
  line-height: 72rpx;
}