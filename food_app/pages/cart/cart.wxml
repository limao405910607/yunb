<!--pages/cart/cart.wxml-->
<view class="cart_list">

   <view 
   wx:for="{{cartlists}}" wx:key="index"
   bindtouchstart="touchStartFn"
   bindtouchmove="touchMoveFn"
   data-idx="{{index}}"
   class="cart_item {{ item.isMove?'moveClass':'' }}"
   >
     <view>
       <icon type="{{ item.selected ?'success':'circle'}}"
       bindtap="changeSelectedFn"
       data-idx="{{index}}"></icon>
     </view>
     <view class="img">
      <image src="{{item.pic}}"></image>
     </view>
     <view  class="info">
      <view class="title">{{item.name}}</view>
      <view class="desc">{{item.info}}</view>
      <view class="price">¥{{item.price}}</view>
      <view class="calculator">
         <text class='reduce' bindtap="reduceCount"
         data-idx="{{index}}"
         >-</text>
         <text class="num">{{item.num}}</text>
         <text class="add" 
         data-idx="{{index}}"
         bindtap="addCount">+</text>
      </view>
     </view>
     <!-- 删除区域 -->
     <view class="remove">删除</view>
   </view>



</view>

<!-- 底部的统计区域 -->
<view class="btm_calc">
  <view class="allSelected">
    <icon type="{{ allSelected ?'success': 'circle'}}"
    bindtap="allSelectedFn"></icon> 全选
  </view>
  <view class="btm_count">
    <text>合计</text>
    <text>{{totalPrice}}</text>
    <text>不含运费</text>
  </view>
  <view class="total {{ isCheckout ?'checkoutClass': ''}}">
    结算 ({{totalPrice}})
  </view>
</view>