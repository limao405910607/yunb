<!--pages/food/food.wxml-->
<!-- 头部区域  地址    搜索 -->
<view class="header">
  <view class="location">
    <navigator url="../selectCity/selectCity">
    {{location}}
    </navigator>
  </view>
  <view class="search">
    <navigator url="../search/search">
    请输入您要搜索的内容
    </navigator>
  </view>
</view>
<!-- 分类区域 -->
<view class="classify">
  <view class="item" wx:for="{{classifyList}}" wx:key="index"
  bindtap="productTypeFn" data-typeid="{{item.id}}">
    <image src="{{item.imgUrl}}"></image>
    <view>{{item.name}}</view>
  </view>


</view>

<!-- 食疗商品列表 -->
<view class="productList">


<import src="../../templates/foodsTemps/foodsTemps.wxml" /> 
 <block wx:for="{{prodcutlist}}" wx:key="index">
  <template is="productTemp" data="{{...item}}"></template>
 </block>
 
  

</view>
<!-- 按钮 -->
<button class="more" size="mini" hidden="{{btnShow}}" catchtap="getMore">{{btnVal}}</button>