.productList .item {
  margin-top: 20rpx;
  height: 184rpx;
  padding: 20rpx;
  background-color: #fff;
  
}
.productList .item image {
  width: 184rpx;
  height: 184rpx;
  float: left;
  margin-right: 20rpx;
}



.productList .item .info {
  float: left;
  width: 506rpx;
  position: relative;
  height: 100%;

}


.productList .item .title {
  color: #333333;
  font-size: 28rpx;
}
.productList .item .desc {
  font-size: 26rpx;
  color: #666666;
  /* 两行超出隐藏 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.productList .item .info_btm {
  position: absolute;
  bottom: 0;
  left: 0;
  color: #666;
  font-size: 23rpx;
}
.productList .item .info_btm .price {
  color: red;
  margin-right: 33rpx;
}
